<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejercicio3.MainPage">

    <AbsoluteLayout Margin="20">
        <!-- Cuadrado rojo: Posicionado en la esquina superior izquierda, tamaño fijo -->
        <BoxView Color="Red"
                 AbsoluteLayout.LayoutBounds="0, 0, 100, 100"
  />

        <!-- Cuadrado azul: Posicionado en la esquina superior derecha, tamaño fijo -->
        <BoxView Color="Blue"
                 AbsoluteLayout.LayoutBounds="100, 0, 200, 100"
 />

        <!-- Cuadrado verde: Posicionado en la parte inferior izquierda, tamaño fijo -->
        <BoxView Color="Green"
                 AbsoluteLayout.LayoutBounds="0, 100, 300, 100"
 />
        <!-- Cuadrado amarillo: En el centro, tamaño relativo -->
        <BoxView Color="Yellow"
                 AbsoluteLayout.LayoutBounds="100, 200, 0.6, 0.4"
                 AbsoluteLayout.LayoutFlags="WidthProportional, HeightProportional" />
    </AbsoluteLayout>

</ContentPage>
